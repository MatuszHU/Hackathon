<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:id="@+id/main"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <!-- Fejléc ikon -->
    <ImageView
        android:id="@+id/imageBrain"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/ic_brain"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="48dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Felső szöveg -->
    <TextView
        android:id="@+id/textInstruction"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Stay still for 10 seconds"
        android:textSize="30sp"
        android:textColor="#212121"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/imageBrain"
        android:layout_marginTop="32dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Kör alakú Play gomb (középen, szabadon) -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/playCircle"
        android:layout_width="250dp"
        android:layout_height="250dp"
        app:cardCornerRadius="125dp"
        app:cardElevation="0dp"
        app:strokeWidth="0dp"
        android:layout_marginTop="32dp"
        app:cardBackgroundColor="#ffffff"
        app:layout_constraintTop_toBottomOf="@id/textInstruction"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:id="@+id/ic_play"
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:src="@drawable/ic_play"
            android:tint="#FFD6A4"
            android:layout_gravity="center"/>
    </com.google.android.material.card.MaterialCardView>

    <!-- Alsó szöveg -->
    <TextView
        android:id="@+id/textReady"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Press Play when\nyou are ready"
        android:textSize="30sp"
        android:textColor="#212121"
        android:gravity="center"
        android:layout_marginTop="70dp"
        app:layout_constraintTop_toBottomOf="@id/playCircle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>
